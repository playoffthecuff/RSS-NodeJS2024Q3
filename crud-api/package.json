{
  "name": "crud-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.config.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "start:prod": "npm run build && cross-env NODE_ENV=production node dist/index.js"
  },
  "author": "playoffthecuff",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "*.test.ts"
    ],
    "watch": [
      "*.ts"
    ],
    "exec": [
      "npm run start"
    ],
    "ext": "ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.7.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
